@{
    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Titulo -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-indigo">Dashboard</h1>
</div>

<div class="row">
    <!-- Total de ventas -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-indigo text-uppercase mb-1"> Total de Ventas</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalVenta">30</div>
                    </div>
                    <div class="col-auto">
                        <img src="data:image/png;base64,">
                    </div>
                </div>
            </div>
        </div>
    </div>

     <!-- Total de Ingresos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-indigo text-uppercase mb-1">Total de Ingresos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalIngresos">$215,000</div>
                    </div>
                    <div class="col-auto">
                        <img src="data:image/png;base64,">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total de Productos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-indigo text-uppercase mb-1">Total de Productos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalProductos">50</div>
                    </div>
                    <div class="col-auto">
                        <img src="data:image/png;base64,">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total de Categorias -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-indigo text-uppercase mb-1">Total de Categorias</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalCategorias">18</div>
                    </div>
                    <div class="col-auto">
                        <img src="data:image/png;base64,">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!--Ventas de los ultimos 7 días -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Encabezado de la Tabla -->
            <div class="card-header py-3 background-green">
                <h6 class="m-0 font-weight-bold text-white">Ventas de los ultimos 7 días</h6>
            </div>
            
            <!-- Tabla -->
            <div class="card-body">
                <div class="chart-area" style="height: 350px !important;">
                    <canvas id="chartVentas"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos más vendidos -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <!-- Encabezado de la Grafica -->
            <div class="card-header py-3 background-green">
                <h6 class="m-0 font-weight-bold text-white">Productos más vendidos</h6>
            </div>
            
            <!-- Grafica -->
            <div class="card-body">
                <div class="chart-pie" style="height: 350px !important ;">
                    <canvas id="chartProductos"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/vistas/DashBoard_Index.js"></script>
}